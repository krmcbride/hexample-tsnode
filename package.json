{
  "name": "@krmcbride/hexample-tsnode-monorepo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "repository": "https://github.com/krmcbride/hexample-tsnode",
  "workspaces": [
    "api/",
    "boot/",
    "core/",
    "data/"
  ],
  "engines": {
    "node": ">=14.15.0"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "scripts": {
    "build": "lerna run build",
    "build:dev": "npm run build && lerna run build:dev",
    "build:prod": "npm run build && lerna run build:prod",
    "build:staging": "npm run build && lerna run build:staging",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "serve": "npm run clean && npm run build && concurrently -k --names \"boot\" \"npm run serve-boot\"",
    "serve-boot": "lerna run --scope @krmcbride/*-boot --stream serve",
    "sls-package": "sls package --package=.serverless",
    "sls-deploy-package": "sls deploy --package=.serverless",
    "test": "lerna run test",
    "test-ci": "lerna run test-ci",
    "watch": "npm run clean && npm run build && concurrently -k --names \"boot\" \"npm run watch-boot\"",
    "watch-boot": "lerna run --scope @krmcbride/*-boot --stream watch"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@apollo/rover": "^0.5.4",
    "@lerna-lite/cli": "^1.1.1",
    "@lerna-lite/run": "^1.1.1",
    "@rushstack/eslint-patch": "^1.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.14.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^28.0.2",
    "jest-junit": "^13.2.0",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "serverless": "^3.19.0",
    "serverless-offline": "^8.8.0",
    "serverless-plugin-canary-deployments": "^0.8.0",
    "serverless-plugin-datadog": "^4.3.0",
    "ts-jest": ">=28.0.0-next.0",
    "ts-node": "^10.7.0",
    "typescript": "~4.6.3"
  }
}
